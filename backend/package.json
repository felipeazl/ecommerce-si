  "scripts": {
    "lint-fix": "eslint . --ext .js --fix",
    "lint": "yarn lint-fix &&  eslint . --ext .js",
    "typeorm": "ts-node-dev ./node_modules/typeorm/cli.js",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "dev": "ts-node-dev --inspect --transpile-only --ignore-watch node_modules src/shared/http/server.ts",
    "up": "yarn typeorm migration:run",
    "revert": "yarn typeorm migration:revert",
    "drop:migration": "yarn typeorm schema:drop"
  },
  "devDependencies": {
    "git-commit-msg-linter": "^3.1.0",
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
