    "prettier": "^2.2.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "bcryptjs": "^2.4.3",
    "celebrate": "^13.0.4",
    "class-transformer": "^0.4.0",
    "cors": "^2.8.5",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.5.1",
    "rate-limiter-flexible": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "touch-cli": "^0.0.1",
